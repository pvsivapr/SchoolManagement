            <StackLayout x:Name="stackBody" Padding="20,0,20,0" BackgroundColor="White" AbsoluteLayout.LayoutBounds="0,0,1,0.9" AbsoluteLayout.LayoutFlags="All" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

				<Image Source="School.png" HeightRequest="200" WidthRequest="200" HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
				</Image>
				<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">
					<StackLayout>
						<Label Text="User Name" FontSize="10" HorizontalOptions="Start" VerticalOptions="Start">
						</Label>
						<local:CustomEntry Placeholder="User Name" HorizontalOptions="FillAndExpand">
						</local:CustomEntry>
						<BoxView HeightRequest="1" BackgroundColor="Black" WidthRequest="250" HorizontalOptions="FillAndExpand" VerticalOptions="End">
						</BoxView>
					</StackLayout>
					<StackLayout>
                        <Label Text="Password" FontSize="10" HorizontalOptions="Start" VerticalOptions="Start">
                        </Label>
                        <local:CustomEntry Placeholder="Password" HorizontalOptions="FillAndExpand">
                        </local:CustomEntry>
                        <BoxView HeightRequest="1" BackgroundColor="Black" WidthRequest="250" HorizontalOptions="FillAndExpand" VerticalOptions="End">
                        </BoxView>
                    </StackLayout>
					<StackLayout>
                        <Label Text="User Name" FontSize="10" HorizontalOptions="Start" VerticalOptions="Start">
                        </Label>
                        <local:CustomPicker Title="User Name" HorizontalOptions="FillAndExpand">
                        </local:CustomPicker>
                        <BoxView HeightRequest="1" BackgroundColor="Black" WidthRequest="250" HorizontalOptions="FillAndExpand" VerticalOptions="End">
                        </BoxView>
                    </StackLayout>
					<Button Text="Login" HorizontalOptions="FillAndExpand">
					</Button>
				</StackLayout>
                
            </StackLayout>

			<StackLayout x:Name="stackFooter" Orientation="Horizontal" AbsoluteLayout.LayoutBounds="1,1,1,0.1" AbsoluteLayout.LayoutFlags="All" Padding="20,0,20,10" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand">
                <Label Text="Powered by" TextColor="Maroon" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                </Label>
				<Label Text="Sivaprasad" TextColor="Teal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                </Label>
			</StackLayout>
            
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>